@model IEnumerable<ERPContable.ViewModels.ReqInterno.ReqInternoViewModel>

@{
    ViewData["Title"] = "Listado de Requerimientos Internos";
}

<h1>Listado de Requerimientos Internos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo Requerimiento</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>
                @Html.DisplayNameFor(model => model.FechaHora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonalNombreCompleto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AreaNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EstadoNombre)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaHora)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonalNombreCompleto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AreaNombre)
                </td>
                <td>
                    <span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.EstadoNombre)</span>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>