@model ERPContable.ViewModels.OCompra.OCompraViewModel

@{
    ViewData["Title"] = "Editar Orden de Compra N° " + Model.Id;
    int index = 0; // Se inicializará con el conteo real de detalles existentes
}

<style>
    /* ---------------------------------------------------------------------- */
